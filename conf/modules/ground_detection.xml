<!DOCTYPE module SYSTEM "module.dtd">

<module name="ground_detection">
    <doc>
        <description>
            Exercise module for Autonomous Flight of MAV Course
        </description>

    </doc>

    <settings>
        <dl_settings>
            <dl_settings name="Navigation">
                <dl_setting var="GD_MAX_SPEED" min="0" step ="0.05" max="1.0" shortname="gd_max_speed"/>
                <dl_setting var="GD_HEADING_RATE" min="0" step ="0.01" max="1.5" shortname="gd_heading_rate"/>
                <dl_setting var="GD_SLOW_FACTOR_FOUND" min="0" step ="0.05" max="1.5" shortname="slow_factor_found"/>
                <dl_setting var="GD_SLOW_FACTOR_SEARCH" min="0" step ="0.05" max="1.5" shortname="slow_factor_search"/>
                <dl_setting var="CONFIDENCE_FACTOR" min="4" step ="0.05" max="10" shortname="confidence_factor"/>
                <dl_setting var="RIGHT_THRESHOLD" min="0" step ="1" max="10" shortname= "right_threshold"/>
            </dl_settings>
        </dl_settings>
    </settings>


    <depends>video_thread</depends>

    <header>
        <file name="ground_detector.h"/>
    </header>

    <init fun="get_signal_init()"/>

    <periodic fun="get_signal_periodic()" freq="4"/>


    <makefile target="ap">
        <file name="ground_detector.c"/>


    </makefile>
    <makefile target="nps">
        <file name="ground_detector.c"/>

    </makefile>
</module>
