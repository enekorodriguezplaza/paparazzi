<!DOCTYPE module SYSTEM "module.dtd">

<module name="ground_detection_testing" dir = "computer_vision">
    <doc>
        <description>
            Testing Ground Detection
        </description>

    </doc>

    <settings>
        <dl_settings>
            <dl_settings name="Get_Rect_Size">
                <dl_setting var="BOTTOM_LENGTH_PERCENTAGE" min="0" step ="0.05" max="1.0" shortname="length_bottom_rect"/>
                <dl_setting var="TOP_LENGTH_PERCENTAGE" min="0" step ="0.05" max="1.0" shortname="length_top_rect"/>
                <dl_setting var="TOP_WIDTH_PERCENTAGE" min="0" step ="0.05" max="1.0" shortname="width_top_rect"/>
                <dl_setting var="WIDTH_RECT" min="1" step ="1" max="15" shortname="width_rect"/>
                <dl_setting var="BOTTOM_WIDTH_PERCENTAGE" min="0" step = "0.05"  max="1.0" shortname="width_bottom_rect"/>
            </dl_settings>

            <dl_settings name="Get_Squared">
                <dl_setting var="LENGTH_SQUARE" min="1" step="1" max="10"/>
                <dl_setting var="SQUARES_CHECKED" min="1" step="1" max="10"/>
            </dl_settings>

            <dl_settings name ="Color_Filter">
                <dl_setting var="lum_min" min="0" step = "1" max="255" shortname="Y_lb"/>
                <dl_setting var="lum_max" min="0" step = "1" max="255" shortname="Y_ub"/>
                <dl_setting var="cb_min" min="0" step = "1" max="255" shortname="U_lb"/>
                <dl_setting var="cb_max" min="0" step = "1" max="255" shortname="U_ub"/>
                <dl_setting var="cr_min" min="0" step = "1" max="255" shortname="V_lb"/>
                <dl_setting var="cr_max" min="0" step = "1" max="255" shortname="V_ub"/>
            </dl_settings>
        </dl_settings>
    </settings>

    

    <depends>video_thread</depends>

    <header>
        <file name="ground_detection_testing.h"/>
    </header>

    <init fun="image_width_printer_init()"/>

    <makefile target="ap">
        <file name="ground_detection_testing.c"/>


    </makefile>
    <makefile target="nps">
        <file name="ground_detection_testing.c"/>

    </makefile>
</module>
